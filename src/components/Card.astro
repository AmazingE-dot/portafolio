---
interface Props {
    href?: string
    img?:string
    titulo?:string
    descripcion?: string
}

const { href, img, titulo, descripcion } = Astro.props
---

<div class="max-w-72 bg-cblanco rounded-lg shadow">
        <img class="rounded-t-lg" src= { img } alt="" />
    <div class="p-5">
        <a href="#">
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"> { titulo } </h5>
        </a>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"> { descripcion }  </p>
        <a href= { href } class="hover-flechita cursor-pointer inline-flex items-center px-3 py-2 text-center text-cblanco bg-cprincipal rounded-lg hover:bg-choverprincipal transition-all ease-in-out hover:scale-110">
            Ver mas
             <svg class="w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path class="text-cblanco" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
            </svg>
        </a>
    </div>
</div>

    <style>
    .hover-flechita svg {
      transition: transform 0.3s ease-in-out;
    }
  
    .hover-flechita:hover svg {
      transform: translateX(3px);
    }
  </style>