<header class="fixed w-full top-0 px-10 lg:px-32 py-6 bg-cblanco">
  <div class="flex flex-row items-center justify-between">
      <div class="subtitulo text-csecundario lg:block hidden">
          <a href="/portafolio/">{`< EduDev />`}</a>
      </div>
      <div class="space-x-12 pararfo lg:flex">
          <button id="menuBtn" class="lg:hidden">
              <svg class="fill-cprincipal font-bold" xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5"/>
            </svg>
          </button>
          <a class="hover:text-cprincipal transition-all ease-in-out hover:scale-110 lg:block hidden" href="/portafolio/#Inicio">Inicio</a>
          <a class="nav-link hover:text-cprincipal transition-all ease-in-out hover:scale-110 lg:block hidden" href="/portafolio/#Proyectos">Proyectos</a>
